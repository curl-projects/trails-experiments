{
  "name": "trails-experiments",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve ./build/server/index.js",
    "generate-feed-schemas": "ts-to-zod ./app/types/FeedTypes.ts ./app/types/RuntimeFeedSchemas.ts --keepComments",
    "generate-graph-schemas": "ts-to-zod ./app/types/GraphTypes.ts ./app/types/RuntimeGraphSchemas.ts --keepComments",
    "generate-schemas": "npm run generate-feed-schemas && npm run generate-graph-schemas",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@remix-run/node": "^2.15.0",
    "@remix-run/react": "^2.15.0",
    "@remix-run/serve": "^2.15.0",
    "@types/node": "^22.10.1",
    "cytoscape": "^3.30.4",
    "dotenv": "^16.4.5",
    "graphology": "^0.25.4",
    "graphology-layout-force": "^0.2.4",
    "isbot": "^4.1.0",
    "neo4j-driver": "^5.27.0",
    "react": "^18.2.0",
    "react-cytoscapejs": "^2.0.0",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.4.6",
    "react-force-graph": "^1.45.2",
    "react-force-graph-2d": "^1.26.1",
    "react-icons": "^5.4.0",
    "react-syntax-highlighter": "^15.6.1",
    "remix-utils": "^7.7.0",
    "sigma": "^3.0.0-beta.39",
    "uuid": "^9.0.0",
    "vis-network": "^9.1.9",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.15.0",
    "@types/cytoscape": "^3.21.8",
    "@types/react": "^18.3.12",
    "@types/react-cytoscapejs": "^1.2.5",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.1.6",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
